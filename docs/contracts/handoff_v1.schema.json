{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HANDOFF/V1 - Autonomous AI Development Handoff Contract",
  "description": "Contract schema for formal handoffs between autonomous AI development modes",
  "type": "object",
  "required": [
    "schema",
    "handoff_id", 
    "parent_id",
    "from",
    "to",
    "objective",
    "inputs",
    "acceptance_criteria",
    "artifacts",
    "dependencies",
    "ttl",
    "next"
  ],
  "properties": {
    "schema": {
      "const": "HANDOFF/V1",
      "description": "Schema version identifier"
    },
    "handoff_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_]+$",
      "description": "Unique identifier for this handoff"
    },
    "parent_id": {
      "type": ["string", "null"],
      "pattern": "^[a-zA-Z0-9-_]+$",
      "description": "Parent handoff ID if this is part of a larger workflow"
    },
    "from": {
      "type": "object",
      "required": ["mode", "timestamp"],
      "properties": {
        "mode": {
          "type": "string",
          "description": "Source mode creating the handoff"
        },
        "agent": {
          "type": ["string", "null"],
          "description": "Specific agent instance if applicable"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the handoff was created"
        }
      },
      "additionalProperties": false
    },
    "to": {
      "type": "object", 
      "required": ["mode"],
      "properties": {
        "mode": {
          "type": "string",
          "description": "Target mode to receive the handoff"
        },
        "agent": {
          "type": ["string", "null"],
          "description": "Specific agent instance if applicable"
        },
        "timestamp": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "When the handoff was accepted"
        }
      },
      "additionalProperties": false
    },
    "objective": {
      "type": "string",
      "minLength": 10,
      "description": "Clear, specific objective for the receiving mode"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of input artifacts and context needed"
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Specific, measurable criteria for completion"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Expected output artifacts"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Dependencies that must be resolved before work can begin"
    },
    "ttl": {
      "type": "string",
      "pattern": "^\\d+[mhdw]$",
      "description": "Time-to-live for this handoff (e.g., '2h', '1d', '1w')"
    },
    "next": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target_mode", "intent"],
        "properties": {
          "target_mode": {
            "type": "string",
            "description": "Next mode in the workflow"
          },
          "intent": {
            "type": "string", 
            "description": "What the next mode should accomplish"
          }
        },
        "additionalProperties": false
      },
      "description": "Next steps in the workflow"
    },
    "context": {
      "type": "object",
      "description": "Additional context information",
      "properties": {
        "business_context": {
          "type": "string",
          "description": "Business rationale and importance"
        },
        "technical_context": {
          "type": "string", 
          "description": "Technical background and constraints"
        },
        "quality_context": {
          "type": "string",
          "description": "Quality requirements and standards"
        }
      }
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Priority level for this handoff"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or special instructions"
    },
    "risk_flags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Identified risks or concerns"
    },
    "status": {
      "type": "string",
      "enum": ["open", "accepted", "rejected", "completed", "expired"],
      "default": "open",
      "description": "Current status of the handoff"
    },
    "checksums": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Checksums for input artifacts to ensure integrity"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "Related URLs or references"
    },
    "quality_gates": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Specific quality gates that must be passed"
    }
  },
  "additionalProperties": false
}