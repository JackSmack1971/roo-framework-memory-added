# Environment Configuration for Roo Framework with Knowledge Base
# Copy this to .env and update with your values

# ============================================================================
# SonarCloud API Configuration
# ============================================================================

# Your SonarCloud API token (Bearer token)
SONAR_TOKEN=b9c5c05a4810ea4ab409f0ba7260f921f0d9874b

# SonarCloud base URL (usually don't change this)
SONAR_BASE_URL=https://sonarcloud.io

# Collection settings
SONAR_COLLECTION_LIMIT=500
SONAR_LANGUAGES=py,js,java,ts,go,rust,php,ruby,cs

# Memory management for large collections
SONAR_BATCH_SIZE=1000
SONAR_MEMORY_WARN_MB=2000
SONAR_MEMORY_LIMIT_MB=4000

# ============================================================================
# Roo Framework Configuration
# ============================================================================

# AI Provider API Keys (add your keys here)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
PERPLEXITY_API_KEY=your_perplexity_key_here

# Roo Framework Settings
ROO_AUTO_APPROVAL=true
ROO_QUALITY_THRESHOLD=0.8
ROO_MAX_CONCURRENT_AGENTS=5

# ============================================================================
# Knowledge Base Settings
# ============================================================================

# Database settings
KNOWLEDGE_BASE_PATH=data/knowledge-bases/programming-issues.sqlite
CHUNKS_PATH=data/exports/programming-issues-chunks.jsonl
MEMORY_BANK_PATH=memory-bank/programming-issues/

# Health check settings
HEALTH_CHECK_INTERVAL_MIN=60
METRICS_ENABLED=true
ALERT_THRESHOLDS_PATH=knowledge-base/monitoring/config/thresholds.json

# ============================================================================
# Development & Testing
# ============================================================================

# Set to true for verbose logging
DEBUG=false
LOG_LEVEL=INFO

# Test mode (uses smaller datasets)
TEST_MODE=false
TEST_COLLECTION_LIMIT=50
